<!DOCTYPE html>
<html>
	<head>
		{{> head}}
	</head>
	<body>
		{{> navbar}}
		<div class="fadeIn">

			<div class="contact body">
				<div class="header">
					<span></span>
				</div>
				<div class="mail-info row section">
					<div class="row">
						<div class="column">

							<div class="info">
								<h2> SEND ME AN EMAIL! </h2>
								<hr class="title-underline">
								<div class="col-xs-6 left">
									<div class="subject">
										<h4>SUBJECT</h4>
										<input id="subject" type="text">
									</div>
									<div class="message">
										<h4>MESSAGE</h4>
										<textarea id="message"></textarea>
									</div>
								</div>
								<div class="col-xs-6 right">
									<div class="name">
										<h4>NAME</h4>
										<input id="name" type="text">
									</div>
									<div class="email">
										<h4>EMAIL</h4>
										<input id="email" type="text">
									</div>
									<button type="button" class="btn btn-success">Send</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			
		</div>
		
		{{> footer}}
	</body>
</html>